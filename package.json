{
    "name": "vsturtle",
    "displayName": "VsTurtle",
    "description": "Logo turtle support for VSCode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vsturtle.run",
                "title": "Logo: Run",
                "icon": "$(breakpoints-view-icon)"
            }
        ],
        "languages": [
            {
                "id": "logo",
                "extensions": [
                    ".logo"
                ]
            }
        ],
        "grammars": [
            {
                "language": "logo",
                "scopeName": "text.logo",
                "path": "./syntaxes/logo.tmlanguage.json"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == logo",
                    "command": "vsturtle.run",
                    "group": "navigation"
                }
            ]
        }
    },
    "publisher": "IgalShapira",
    "scripts": {
        "vscode:prepublish": "pnpm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.8"
    },
    "author": "Igal Shapira <igal.shapira@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/igalshapira/vsturtle.git"
    }
}
